<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email address</th>
      <th>User</th>
      <th>Weekfeel</th>
      <th>Currentfeel</th>
      <th>Highfeel</th>
      <th>Lowfeel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email_address %></td>
        <td><%= contact.user_id %></td>
        <td><%= contact.weekFeel %></td>
        <td><%= contact.currentFeel %></td>
        <td><%= contact.highFeel %></td>
        <td><%= contact.lowFeel %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

