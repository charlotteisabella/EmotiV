<%= link_to 'Contacts Index', contacts_path %>

<h1>Listing Snippets</h1>

<%= link_to 'New Snippet', new_snippet_path %>

<table>
  <thead>
    <tr>
      <th>Inbound</th>
      <th>Contact</th>
      <th>Context</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snippets.each do |snippet| %>
      <tr>
        <td><%= snippet.inbound %></td>
        <td><%= snippet.contact_id %></td>
        <td><%= snippet.context %></td>
        <td><%= snippet.date %></td>
        <td><%= link_to 'Show', snippet %></td>
        <td><%= link_to 'Edit', edit_snippet_path(snippet) %></td>
        <td><%= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>